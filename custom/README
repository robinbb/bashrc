file="$BASHRC_D_README_ARG"

f() {
   dir="~/.bashrc.d/custom/$1"
   script="$dir"/"$file"
   [ -r $script ] && . $script
}
f "/hosts/$HOSTNAME/$USER"
f "/users/$USER/$HOSTNAME"
f "/hosts/$HOSTNAME"
f "/users/$USER"
f ""
unset -f f

for dir in ~/.bashrc.d/modules/* ; do
   [ -d "$dir" ] || break
   script="$dir"/$file
   [ -r $script ] && . $script
done

unset -v dir file script
